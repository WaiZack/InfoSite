<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">


  <!-- CSS -->
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">


  <%= javascript_include_tag ('loginScripts') %>
  <%= stylesheet_link_tag ('login') %>
  <%=stylesheet_link_tag('application')%>
  <%= stylesheet_link_tag('form-elements')%>

</head>


<body>

<!-- Top content -->
<div class="top-content">

  <div class="inner-bg">
    <div class="container">
      <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
          <div class="form-top-left">
            <h3>Password Reset</h3>
          </div>
        </div>
        <div class="form-bottom">
          <%= simple_form_for(@user ,url: password_reset_path(params[:id]))do |f| %>

              <%= hidden_field_tag :email, @user.email %>

              <%= f.input :password, placeholder: 'Password', label: false %>
              <%= f.input :password_confirmation, placeholder: 'Password Confirmation', label: false %>
              <%= f.button :button, 'Reset Password', class: 'btn' %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<%= javascript_include_tag 'application' %>

</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="robots" content="none">


  <!-- CSS -->
  <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">


  <%= javascript_include_tag ('loginScripts') %>
  <%= stylesheet_link_tag ('login') %>
  <%=stylesheet_link_tag('application')%>
  <%= stylesheet_link_tag 'form-elements' %>
  <%= stylesheet_link_tag 'awesome-bootstrap-checkbox'%>

</head>


<body>

<!-- Top content -->
<div class="top-content">

  <div class="inner-bg">
    <div class="container">
      <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
          <div class="form-top-left">
            <h3>BiZiT Festival Volunteer Registration</h3>
            <p>Please provide the following information</p>
          </div>
          <div class="form-top-right">
            <i class="fa fa-lock"></i>
          </div>
        </div>
        <div class="form-bottom">

          <% if @slave.errors.any? %>
              <div id="error_explanation">
                <ul>
                  <% @slave.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <%= simple_form_for @slave, :url => '/volunteering' do |f| %>
              <%= f.input :email, placeholder: 'Email', label: false %>
              <%= f.input :name, placeholder: 'Name', label: false %>
              <%= f.input :phone, placeholder: 'Phone Number', label: false %>
              <%= f.input :institute, placeholder: 'School\'s Full Name', label: false %>
              <label>Dietary Preference</label>
              <%= f.input :diet, :collection => %w(Vegetarian Non-Vegetarian), include_blank: false, include_hidden: false,label: false, input_html: { class: 'form-control' },value: @slave.diet%>

              <%= f.button :button, 'Sign up', class: 'btn btn-lg btn-success' %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<%= javascript_include_tag 'application' %>

</body>

</html>
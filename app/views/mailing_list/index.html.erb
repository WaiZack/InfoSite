<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


  <!-- Bootstrap -->

  <%=stylesheet_link_tag('coming')%>
  <%=stylesheet_link_tag('form-elements')%>
  <!-- siimple style -->
</head>

<body>

<div id="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>BiZiT Festival</h1>
        <h2 class="subtitle">Register your interest below!</h2>
        <div id="countdown"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-12 text-center">
              <% flash.each do |key, value| %>
                  <div class="alert alert-<%= key %>"><%= value %></div>
              <% end %>
            </div>

          </div>
          <%= simple_form_for :mailing_list, url: '/addList' do |f| %>
              <%= f.input :email, placeholder: 'Email', label: false %>
              <br>
              <%= f.button :button, 'Sign up!', class: 'btn' %>
          <% end %>
        </div>
      </div>


    </div>
  </div>

  <%= javascript_include_tag ('application.js')%>
  <%= javascript_include_tag ('jquery.countdown.min') %>
  <script type="text/javascript">
      $('#countdown').countdown('2017/04/10', function(event) {
          $(this).html(event.strftime('%w weeks %d days <br /> %H:%M:%S'));
      });
  </script>
</div>

</body>
</html>

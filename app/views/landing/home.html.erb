  </div>
  <!-- /.container-fluid -->
</nav>

<!-- Header -->
<header id="homeHeader">
  <div class="layer">
    <div class="container">

      <div class="intro-text">

          <div class="intro-lead-in">BiZiT Festival</div>
          <div class="intro-heading">2017</div>
          <div><a href="/users" class="btn-register">Register</a></div>
          <div class = "register-bar"> 22 June - 23 June 2017 <br> Stephen Riady Centre, University Town </div>

      </div>
    </div>
  </div>
</header>

<!-- 3 tracks-->
<section class = "home-sponsors" id="tracks">
  <div class="container">
    <div class="row text-center">
      <div class="col-md-4">
        <h3 class="service-heading">Smart Nation</h3>
        <div class="image"><%= image_tag 'smartnation/SmartNationBackground.jpg', :class => 'img-responsive img-centered'%></div>
        <h3 class="service-heading">The Challenges of a Futuristic World</h3>
      </div>
      <div class="col-md-4">
        <h3 class="service-heading">Big Data</h3>
        <%= image_tag 'bigdata/BigDataBackground.jpg', :class => 'img-responsive img-centered'%>
        <h3 class="service-heading">The Challenges of Business Innovation</h3>
      </div>
      <div class="col-md-4">
        <h3 class="service-heading">Fintech</h3>
        <%= image_tag 'fintech/fintechBackground.jpg', :class => 'img-responsive img-centered'%>
        <h3 class="service-heading">Disrupting Financial Service</h3>
      </div>
    </div>
  </div>
</section>


<!-- Prizes Section -->
<section id="prizes" class="other">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h1 class="section-heading" id="statement-section-heading">Prizes</h1>
        <h4>
          There will 3 winners for each track of the competition.
          Prize is awarded to the winning team, and the way it is divided among the members is entirely up to the team.
        </h4>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-3">
        <h3 class="service-heading">First Prize</h3>
        <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primarySN"></i>
                        <i class="fa fa-briefcase fa-stack-1x fa-inverse"></i>
                    </span>
        <h3 class="service-heading">$2000 in cash</h3>
        <p class="text-muted">$2000 in cash + exclusive internship opportunity with title sponsor!</p>
      </div>
      <div class="col-md-3">
        <h3 class="service-heading">Second Prize</h3>
        <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primarySN"></i>
                        <i class="fa fa-money fa-stack-1x fa-inverse"></i>
                    </span>
        <h3 class="service-heading">$1000 in cash</h3>
      </div>
      <div class="col-md-3">
        <h3 class="service-heading">Third Prize</h3>
        <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primarySN"></i>
                        <i class="fa fa-money fa-stack-1x fa-inverse"></i>
                    </span>
        <h3 class="service-heading">$500 in cash</h3>
      </div>
      <div class="col-md-3">
        <h3 class="service-heading">Popz</h3>
        <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primarySN"></i>
                        <i class="fa fa-shopping-cart fa-stack-1x fa-inverse"></i>
                    </span>
        <h3 class="service-heading">$500 Voucher</h3>
        <p class="text-muted">There will be one popularity winner. The team that receives the most votes from visitors will win $500 in vouchers from Zalora!</p>
      </div>
    </div>
  </div>
</section>

<!-- Sponsors -->
<section id="sponsors" class="layer">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h1 class="section-heading">Sponsors</h1>
        <h3 class="section-heading">
          Sponsor titles for this track to be unveiled soon!
        </h3>
      </div>
    </div>
    <a name="mailing"></a>
    <section id="contactForm" class="layer">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h1 class="section-heading">Mailing List</h1>
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>
            <h3 class="section-heading">
              Sign up for our mailing list to stay updated!
            </h3>
          </div>

        </div>
        <%= simple_form_for :mailing_list, url: '/addList' do |f| %>
            <%= f.input :email, placeholder: 'Email', label: false %>
            <%= f.button :button, 'Sign up!', class: 'btn' %>
        <% end %>
      </div>
    </section>
  </div>
</section>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <span class="copyright">Copyright &copy; Your Website 2016</span>
      </div>
      <div class="col-md-4">
        <ul class="list-inline social-buttons">
          <li><a href=""><i class="fa fa-twitter"></i></a>
          </li>
          <li><a href=""><i class="fa fa-facebook"></i></a>
          </li>
          <li><a href=""><i class="fa fa-linkedin"></i></a>
          </li>
        </ul>
      </div>
      <div class="col-md-4">
        <ul class="list-inline quicklinks">
          <li><a href="">Privacy Policy</a>
          </li>
          <li><a href="">Terms of Use</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>


</body>

</html>
